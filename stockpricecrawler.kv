#:import os os
#:set fontName os.path.join(os.path.abspath('.'), 'fonts', 'NanumGothic.ttf')

WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"
    

    GridLayout:
        rows: 2

        GridLayout:
            cols: 2

            Label:
                text: "비밀번호: "
                font_name: fontName

            TextInput:
                id: pwd
                multiline: False

        Button:
            text: "Submit"
            on_press:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
#:import os os
#:set fontName os.path.join(os.path.abspath('.'), 'fonts', 'NanumGothic.ttf')

WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"


    BoxLayout:
        orientation: 'vertical'

        # 상단
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .08
            Button:
                text: '>'
                size_hint_x: .125
            Label:
                text: '주가 데이터 수집기'
                font_name: fontName
                size_hint_x: .75
            Button:
                text: '설정'
                font_name: fontName
                size_hint_x: .125

        # 중단
        GridLayout:
            cols: 3
            rows: 3

            Label:
                text: "비밀번호: "
                font_name: fontName

            TextInput:
                id: pwd
                multiline: False

            Label:
                text: "비밀번호: "
                font_name: fontName

            TextInput:
                id: pwd
                multiline: False

        # 하단
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .1
            Button:
                text: '확인'
                font_name: fontName
                size_hint_x: .33
            Button:
                text: '취소'
                font_name: fontName
                size_hint_x: .33

        # Button:
        #     text: "Submit"
        #     on_press:
        #         app.root.current = "second"
        #         root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"
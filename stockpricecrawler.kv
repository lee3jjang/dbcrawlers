#:import os os
#:set fontName os.path.join(os.path.abspath('.'), 'fonts', 'NanumGothic.ttf')

WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"


    BoxLayout:
        orientation: 'vertical'

        # 상단
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: .15
            Button:
                text: '>'
                size_hint_x: .15
            Label:
                text: '주가 데이터 수집기'
                font_name: fontName
                size_hint_x: .7
            Button:
                text: '설정'
                font_name: fontName
                size_hint_x: .15

        GridLayout:
            cols: 2

            Label:
                text: "비밀번호: "
                font_name: fontName

            TextInput:
                id: pwd
                multiline: False

        Button:
            text: "Submit"
            on_press:
                app.root.current = "second"
                root.manager.transition.direction = "left"

<SecondWindow>:
    name: "second"

    Button:
        text: "Go Back"
        on_release:
            app.root.current = "main"
            root.manager.transition.direction = "right"